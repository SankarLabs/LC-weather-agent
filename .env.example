# Core LLM API Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# LangSmith Tracing (Highly Recommended for Development)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=langchain-context-engineering
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Vector Store Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
CHROMA_PERSIST_DIRECTORY=./chroma_db
WEAVIATE_URL=http://localhost:8080

# Memory & Persistence
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://user:password@localhost:5432/langchain_db

# Search & External APIs
SERPAPI_API_KEY=your_serpapi_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
BRAVE_API_KEY=your_brave_api_key_here

# Weather API Configuration
OPENWEATHER_API_KEY=3654fdb8a41e673831694d7f820dc4cf

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Testing Configuration
PYTEST_FAST_MODE=false
PYTEST_ALLOW_API_TESTS=true
LANGCHAIN_TEST_MODE=true

# Optional: Other providers
COHERE_API_KEY=your_cohere_api_key_here
HUGGINGFACE_API_TOKEN=your_hf_token_here